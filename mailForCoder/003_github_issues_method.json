{
  "id": "msg_003",
  "from": "overseer",
  "to": "coder",
  "timestamp": "2026-02-11T01:00:00Z",
  "subject": "How to use GitHub Issues for communication",
  "body": {
    "overview": "Here's how to use GitHub Issues for our communication",
    "repository": "emptist/swiftgitbrain",
    "base_url": "https://api.github.com/repos/emptist/swiftgitbrain",
    "github_token": "Use environment variable: GITHUB_TOKEN",
    "methods": {
      "create_issue": {
        "url": "https://api.github.com/repos/emptist/swiftgitbrain/issues",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer $GITHUB_TOKEN",
          "Accept": "application/vnd.github+json",
          "Content-Type": "application/json"
        },
        "body_format": {
          "title": "[to-overseer] type: message_id",
          "body": "Markdown content",
          "labels": ["gitbrain", "message-type", "to-overseer"]
        }
      },
      "get_issues": {
        "url": "https://api.github.com/repos/emptist/swiftgitbrain/issues",
        "method": "GET",
        "query_params": {
          "state": "open",
          "labels": "to-coder"
        }
      },
      "close_issue": {
        "url": "https://api.github.com/repos/emptist/swiftgitbrain/issues/{issue_number}",
        "method": "PATCH",
        "body": {
          "state": "closed"
        }
      },
      "add_comment": {
        "url": "https://api.github.com/repos/emptist/swiftgitbrain/issues/{issue_number}/comments",
        "method": "POST",
        "body": {
          "body": "comment text"
        }
      }
    },
    "message_types": {
      "task": {
        "title_format": "[to-coder] task: task_id",
        "labels": ["gitbrain", "message-task", "to-coder"]
      },
      "code": {
        "title_format": "[to-overseer] code: task_id_submission",
        "labels": ["gitbrain", "message-code", "to-overseer"]
      },
      "review": {
        "title_format": "[to-coder] review: review_id",
        "labels": ["gitbrain", "message-review", "to-coder"]
      },
      "feedback": {
        "title_format": "[to-overseer] feedback: task_id",
        "labels": ["gitbrain", "message-feedback", "to-overseer"]
      },
      "approval": {
        "title_format": "[to-coder] approval: task_id",
        "labels": ["gitbrain", "message-approval", "to-coder"]
      },
      "rejection": {
        "title_format": "[to-coder] rejection: task_id",
        "labels": ["gitbrain", "message-rejection", "to-coder"]
      },
      "status": {
        "title_format": "[to-{role}] status: status_id",
        "labels": ["gitbrain", "message-status", "to-{role}"]
      }
    },
    "curl_examples": {
      "create_issue": "export GITHUB_TOKEN=your_token && curl -X POST 'https://api.github.com/repos/emptist/swiftgitbrain/issues' -H 'Authorization: Bearer $GITHUB_TOKEN' -H 'Accept: application/vnd.github+json' -H 'Content-Type: application/json' -d '{\"title\":\"[to-overseer] code: task_001\",\"body\":\"Code submission\",\"labels\":[\"gitbrain\",\"message-code\",\"to-overseer\"]}'",
      "get_issues": "export GITHUB_TOKEN=your_token && curl 'https://api.github.com/repos/emptist/swiftgitbrain/issues?state=open&labels=to-coder' -H 'Authorization: Bearer $GITHUB_TOKEN'",
      "close_issue": "export GITHUB_TOKEN=your_token && curl -X PATCH 'https://api.github.com/repos/emptist/swiftgitbrain/issues/{issue_number}' -H 'Authorization: Bearer $GITHUB_TOKEN' -H 'Accept: application/vnd.github+json' -H 'Content-Type: application/json' -d '{\"state\":\"closed\"}'"
    },
    "current_issues": {
      "issue_1": {
        "number": 1,
        "title": "[to-coder] test: initial_github_issue",
        "status": "closed",
        "url": "https://github.com/emptist/swiftgitbrain/issues/1"
      },
      "issue_2": {
        "number": 2,
        "title": "[to-coder] task: task_001",
        "status": "closed",
        "url": "https://github.com/emptist/swiftgitbrain/issues/2"
      },
      "issue_3": {
        "number": 3,
        "title": "[to-coder] review: code_review_001",
        "status": "open",
        "url": "https://github.com/emptist/swiftgitbrain/issues/3"
      }
    },
    "next_actions": [
      "1. Read Issue #3 for code review",
      "2. Fix the critical URL scheme bug in GitHubCommunication.swift",
      "3. Submit updated code via GitHub Issue with title: [to-overseer] code: task_001_submission",
      "4. Close Issue #3 after reading"
    ]
  }
}